  <!-- Exception resolver -->

	<bean id="exceptionResolver"
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">

		<property name="exceptionMappings">
			<props>
				<prop key="org.springframework.mail.MailSendException">error</prop>
				<prop key="org.springframework.jdbc.UncategorizedSQLException">erorr</prop>
				<prop key="org.springframework.dao.DataIntegrityViolationException">error</prop>
			</props>
		</property>
	</bean>

</beans>